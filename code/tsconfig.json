{
  "exclude": [
    "test",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "outFile": "./dist/types.js",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
